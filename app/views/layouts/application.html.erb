<!DOCTYPE html>
<html>
  <head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stripe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application" 'data-turbolinks-track' => true %>
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
    <script type="text/javascript" src="https://js.stripe.com/v2/"></script>
    <script type="text/javascript">
      Stripe.setPublishableKey("pk_live_51IhdOBJSUjZHBscMvtkSX8nc5MqDIu4KIriyujDUMSR437BRQPicb3nByOyaiUU8zrOOI0ror5ESqksAzp3Mwr1n00Uk6tQznz");
      $(document).ready(function() {
        var stripeResponseHandler;
    
        $('#payment-form').submit(function(event) {
          var $form;
          $form = $(this);
          $form.find('button').prop('disabled', true);
          Stripe.card.createToken($form, stripeResponseHandler);
          return false;
        });
        setInterval(myTimer, 500);

        function myTimer() {
        
        
                  function cvalue1() { 
                    if(document.getElementById('Cvalue1').checked) {
                      document.querySelector('#amount').value = document.querySelector('#Cvalue1').value;
                    }
                }
                  function cvalue2() { 
                    if(document.getElementById('Cvalue2').checked) {
                      document.querySelector('#amount').value = document.querySelector('#Cvalue2').value;
                    }
                }
                  function cvalue3() { 
                    if(document.getElementById('Cvalue3').checked) {
                      document.querySelector('#amount').value = document.querySelector('#Cvalue3').value;
                    }
                }
                function cvalue4() { 
                  if(document.getElementById('Cvalue4').checked) {
                    document.querySelector('#amount').value = document.querySelector('#Cvalue4').value;
                  }
              }
                function cvalue5() { 
                  if(document.getElementById('Cvalue5').checked) {
                    document.querySelector('#amount').value = document.querySelector('#Cvalue5').value;
                  }
              }
                function cvalue6() { 
                  if(document.getElementById('Cvalue6').checked) {
                    document.querySelector('#amount').value = document.querySelector('#Cvalue6').value;
                  }
              }
            }
            
      stripeResponseHandler = function(status, response) {
        var $form, token;
        $form = $('#payment-form');
        if (response.error) {
          $form.find('.payment-errors').text(response.error.message);
          $form.find('button').prop('disabled', false);
        } else {
          token = response.id;
          
          $form.append($('<input type="hidden" name="stripeToken" />').val(token));
          $form.append($('<input type="hidden" name="email" />').val(document.querySelector('#email').value));
          $form.append($('<input type="hidden" name="name" />').val(document.querySelector('#name').value));
          $form.append($('<input type="hidden" name="amount" />').val(document.querySelector('#amount').value));


          $form.get(0).submit();
        }
      };
      });
    </script>
    <style>
    @media (max-width: 900px) {
    #mobile {
      margin-top: 20px;
      transform: scale(1.4) !important;
    }
  
  </style>
  </head>

  <body>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: "alert alert-info" %>
    <% end %> 
    <%= yield %>
  </body>
</html>
