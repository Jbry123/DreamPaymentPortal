
  <body class="text-center">
  <style>
  
  @media only screen and (max-width: 900px) {
  .mobile {
    transform: scale(2);
  }
}
input {
  border: 2px solid #e40a89 !important;
}

.button-pay {
  margin: 0 !important;
  border: none;
  background: #e40a89 !important;
  border-radius: 5px;
  transition: all 1.2s;
}

.button-pay:hover {
  background: #8b0855 !important;
}



</style>
  <div class="logo-div">
    <div class="site-logo"><a href="https://dreammachineusa.org/" class="custom-logo-link mobile" rel="home"><img width="1150" height="711" src="https://dreammachineusa.org/wp-content/uploads/2021/05/cropped-DreamMachineLogoSquare.png" class="custom-logo mobile" alt="Dream Machine USA" srcset="https://dreammachineusa.org/wp-content/uploads/2021/05/cropped-DreamMachineLogoSquare.png 1150w, https://dreammachineusa.org/wp-content/uploads/2021/05/cropped-DreamMachineLogoSquare-300x185.png 300w, https://dreammachineusa.org/wp-content/uploads/2021/05/cropped-DreamMachineLogoSquare-1024x633.png 1024w, https://dreammachineusa.org/wp-content/uploads/2021/05/cropped-DreamMachineLogoSquare-768x475.png 768w" sizes="(max-width: 1150px) 100vw, 1150px"></a></div>
  </div>
    <div class="form-signin">
    <h2>Donate Monthly</h2>
  </div>

  <%= form_tag charges_path, method: 'post', id: 'payment-form' do %>
    <div class="container">
      <div class="row">
        <div class="col-md-4 offset-md-4 mobile">

          <div class="field">
            <label>
              <input type="text" id="name" class="card-fields" placeholder="Name"/>
            </label>
          </div>

          <div class="field">
            <label>
              <input type="text" id="email" class="card-fields" placeholder="Email"/>
            </label>
          </div>

          <div class="field">
            <label>
              <input type="text" data-stripe="number" class="card-fields" placeholder="Card Number"/>
            </label>
          </div>

          <div class="field">
            <label>
              <input type="text" data-stripe="cvc" class="card-fields" width="100%" placeholder="CVC"/>
            </label>
          </div>

          <div class="field">
            <label>
              <input type="text" size="2" data-stripe="exp-month" class="card-fields-date" placeholder="MM"/>
            </label>
              <input type="text" size="4" data-stripe="exp-year" class="card-fields-date" placeholder="YYYY"/>
          </div>

          <div class="field">
            <label>
              <input type="text" id="amount" class="card-fields" placeholder="Amount"/>
            </label>
          </div>

        <div class="actions">
        <button class="button-pay" type="submit">Start Monthly Donation</button>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</body>


