<% if cookies[:campaign].present? %>
  <% if cookies[:campaign] == "Shelbys-fund" %>
  <%= render partial: "charges/Shelbys-fund/show_confirmation" %>

    <% elsif cookies[:campaign] == "Saras-fund" %>
    <%= render partial: "charges/Saras-fund/show_confirmation" %>

      <% elsif cookies[:campaign] == "King-Kell-fund" %>
      <%= render partial: "charges/King-Kell-fund/show_confirmation" %>
  <% end %>

<% else %>
  <%= render partial: "charges/default_confirmation" %>
<% end %>


